<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PublicFitSystemWindow" parent="PublicBaseTheme">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="PublicBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/public_colorPrimary</item>
        <item name="colorPrimaryDark">@color/public_colorPrimaryDark</item>
        <item name="colorAccent">@color/public_colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="actionOverflowMenuStyle">@style/PublicPopupTheme</item>
    </style>

    <!-- Base application theme. -->
    <style name="PublicAppTheme" parent="PublicBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/public_colorPrimary</item>
        <item name="colorPrimaryDark">@color/public_colorPrimaryDark</item>
        <item name="colorAccent">@color/public_colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- ToolBar菜单样式.-->
    <style name="PublicPopupTheme" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">2dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <!--<item name="android:dropDownHorizontalOffset">10dp</item>-->
    </style>

    <!--全屏加透明-->
    <style name="PublicTranslucentFullScreenTheme" parent="PublicAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@style/SwipeBackActivityAnim</item>-->
    </style>
    <!--动画设置-->
    <style name="PublicSwipeBackActivityAnim" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/public_swipe_back_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/public_swipe_back_slide_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/public_swipe_back_slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/public_swipe_back_slide_right_out</item>
    </style>

    <style name="PublicLoadingDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/public_trans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PublicCommonTipsTextView">
        <item name="android:textSize">@dimen/public_sp_14</item>
        <item name="android:textColor">@color/public_colorPrimary</item>
    </style>

    <style name="PublicDialogAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_appear</item>
        <item name="android:windowExitAnimation">@anim/public_dialog_disappear</item>
    </style>
</resources>