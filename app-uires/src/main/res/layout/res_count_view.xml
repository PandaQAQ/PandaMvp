<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/res_dp_39"
    android:background="@color/res_colorTrans"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_tab_reduce"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/res_dp_39"
        android:layout_marginEnd="@dimen/res_dp_10"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_count_decrease"/>

    <EditText
        android:id="@+id/et_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/res_dp_39"
        android:background="@color/res_colorTrans"
        android:cursorVisible="false"
        android:inputType="number"
        android:minWidth="@dimen/res_dp_16"
        android:textColor="@color/res_colorTextBlack"
        android:textSize="@dimen/res_sp_16"/>

    <ImageView
        android:id="@+id/iv_tab_add"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/res_dp_39"
        android:layout_marginStart="@dimen/res_dp_10"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_count_increase"/>
</LinearLayout>