<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DefaultCheckbox" parent="BaseAppTheme">
        <item name="colorControlNormal">@color/colorNegative</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <!--    Dialog弹窗相关-->
    <style name="LoadingDialog" parent="android:Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/res_colorTrans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CommonTipsTextView" tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/res_sp_14</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DialogAnim" parent="@android:style/Animation" tools:ignore="ResourceName">
        <item name="android:windowEnterAnimation">@anim/res_dialog_appear</item>
        <item name="android:windowExitAnimation">@anim/res_dialog_disappear</item>
    </style>

    <style name="CheckItemStyle">
        <item name="android:background">@drawable/res_bg_check_item</item>
        <item name="android:textColor">@color/res_checkable_text_color</item>
        <item name="android:button">@null</item>
    </style>

    <style name="loading_dialog_trans" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/colorTrans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/colorTrans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Panda" parent="Matisse.Zhihu">
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="colorPrimaryDark">?attr/colorAccent</item>
        <item name="bottomToolbar.bg">?attr/colorAccent</item>
        <item name="preview.bottomToolbar.apply.textColor">@android:color/white</item>
        <item name="item.checkCircle.backgroundColor">?attr/colorAccent</item>
        <item name="capture.textColor">@android:color/white</item>
        <item name="item.placeholder">#8899A9</item>
        <item name="bottomToolbar.preview.textColor">@color/res_colorWhite</item>
        <item name="bottomToolbar.apply.textColor">@color/res_colorWhite</item>
        <item name="album.element.color">@color/res_colorWhite</item>
        <item name="album.dropdown.title.color">@color/res_colorTextMinor</item>
        <item name="album.dropdown.count.color">@color/res_colorTextMain</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_ios_white</item>
        <item name="toolbar">@style/PandaToolbar</item>
    </style>

    <style name="PandaToolbar" parent="Toolbar.Zhihu">
        <item name="android:navigationIcon">@drawable/ic_arrow_back_ios_white</item>
    </style>

    <style name="FitSystemWindow" parent="BaseAppTheme" tools:ignore="ResourceName">
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>