<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    白天模式-->
    <style name="BaseAppTheme.Day">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="colorAccent">@color/colorPrimaryDay</item>
        <item name="colorButtonNormal">@color/colorAccentDay</item>
        <item name="editTextColor">@color/colorAccentDay</item>
        <item name="android:windowBackground">@color/colorBackgroundDay</item>
        <!--        自定义属性部分-->
        <item name="colorBackground">@color/colorBackgroundDay</item>
        <item name="toolbarBackground">@color/colorPrimaryDay</item>
    </style>

    <!--    黑夜模式-->
    <style name="BaseAppTheme.Night">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorPrimaryNight</item>
        <item name="colorButtonNormal">@color/colorAccentNight</item>
        <item name="editTextColor">@color/colorAccentNight</item>
        <item name="android:windowBackground">?attr/colorBackground</item>
        <!--        自定义属性部分-->
        <item name="colorBackground">@color/colorBackgroundNight</item>
        <item name="toolbarBackground">@color/colorPrimaryNight</item>
    </style>
</resources>