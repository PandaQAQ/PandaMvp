<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/res_dp_80"
        android:layout_height="@dimen/res_dp_80"
        android:layout_marginStart="@dimen/res_dp_8"
        android:layout_marginTop="@dimen/res_dp_8"
        android:layout_marginEnd="@dimen/res_dp_8"
        android:layout_marginBottom="@dimen/res_dp_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_count_decrease"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/res_dp_8"
        android:layout_marginTop="@dimen/res_dp_16"
        android:layout_marginEnd="@dimen/res_dp_8"
        android:text="@string/res_text_net_error"
        android:textColor="@color/res_colorTextEmpty"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"/>
</LinearLayout>