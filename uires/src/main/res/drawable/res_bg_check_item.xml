<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时字体颜色 -->
    <item android:color="@color/cb_unchecked_stoke" android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/res_colorWhite"/>
            <corners android:radius="@dimen/dp_4"/>
            <stroke
                android:width="1dp"
                android:color="@color/cb_unchecked_stoke"
                android:dashWidth="1dp"/>
        </shape>
    </item>
    <!--选中时的字体颜色  -->
    <item android:color="@color/white" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cb_checked_color"/>
            <corners android:radius="@dimen/dp_4"/>
        </shape>
    </item>
</selector>